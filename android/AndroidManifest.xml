<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lu.mir.android.pomodorobox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="PomodoroBoxApplication"
        android:theme="@style/AppTheme" >
        
        <service android:name="lu.mir.android.pomodorobox.TimerService" />
        
        <activity
            android:name="lu.mir.android.pomodorobox.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lu.mir.android.pomodorobox.TimerActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="lu.mir.android.pomodorobox.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lu.mir.droid.pomodoro.MainActivity" />
        </activity>
        <activity
            android:name="lu.mir.android.pomodorobox.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="lu.mir.android.pomodorobox.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lu.mir.droid.pomodoro.MainActivity" />
        </activity>
        <activity
            android:name="lu.mir.android.pomodorobox.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        
        <activity android:name="com.dropbox.sync.android.DbxAuthActivity" />
<activity
  android:name="com.dropbox.client2.android.AuthActivity"
  android:launchMode="singleTask" >
  <intent-filter>
    <data android:scheme="db-91kr6dmol3ta60l" />
    <action android:name="android.intent.action.VIEW" />
    <category android:name="android.intent.category.BROWSABLE" />
    <category android:name="android.intent.category.DEFAULT" />
  </intent-filter>
</activity>


 
<service
  android:name="com.dropbox.sync.android.DbxSyncService"
  android:enabled="true"
  android:exported="false"
  android:label="Dropbox Sync" />
        
        
    </application>

</manifest>
